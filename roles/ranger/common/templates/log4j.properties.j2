# Define some default values that can be overridden by system properties
ranger.root.logger=INFO,console
ranger.log.dir={{ ranger_log_dir }}
ranger.log.file=ranger.log

log4j.rootLogger = ${ranger.root.logger}

#
# Rolling File Appender - cap space usage at 5gb.
#
ranger.log.maxfilesize={{ ranger_log_rfa_maxfilesize }}
ranger.log.maxbackupindex={{ ranger_log_rfa_maxbackupindex }}
log4j.appender.RFA=org.apache.log4j.RollingFileAppender
log4j.appender.RFA.File=${ranger.log.dir}/${ranger.log.file}

log4j.appender.RFA.MaxFileSize=${ranger.log.maxfilesize}
log4j.appender.RFA.MaxBackupIndex=${ranger.log.maxbackupindex}

log4j.appender.RFA.layout=org.apache.log4j.PatternLayout

# Pattern format: Date LogLevel LoggerName LogMessage
log4j.appender.RFA.layout.ConversionPattern={{ ranger_log_layout_pattern }}
# Debugging Pattern format
#log4j.appender.RFA.layout.ConversionPattern=%d{ISO8601} %-5p %c{2} (%F:%M(%L)) - %m%n


#
# Daily Rolling File Appender
#
log4j.appender.DRFA=org.apache.log4j.DailyRollingFileAppender
log4j.appender.DRFA.File=${ranger.log.dir}/${ranger.log.file}

# Rollover at midnight
log4j.appender.DRFA.DatePattern={{ ranger_log_drfa_date_pattern }}
log4j.appender.DRFA.layout=org.apache.log4j.PatternLayout

# Pattern format: Date LogLevel LoggerName LogMessage
log4j.appender.DRFA.layout.ConversionPattern={{ ranger_log_layout_pattern }}
# Debugging Pattern format
#log4j.appender.DRFA.layout.ConversionPattern=%d{ISO8601} %-5p %c{2} (%F:%M(%L)) - %m%n
