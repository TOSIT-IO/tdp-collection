[Unit]
Description=Hiveserver2
After=network-online.target
Wants=network-online.target

[Service]
User={{ hive_user }}
Group={{ hadoop_group }}
ExecStart={{ hive_install_dir }}/bin/start-hiveserver2.sh
SuccessExitStatus=143
LimitNOFILE=64000
Restart={{ hiveserver2_restart }}
SyslogIdentifier=hive-server2

[Install]
WantedBy=multi-user.target
