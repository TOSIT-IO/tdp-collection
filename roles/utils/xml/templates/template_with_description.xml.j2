<?xml version='1.0' encoding='UTF-8'?>
<configuration>
{% for name, value in properties_values.items() %}
  <property>
    <name>{{ name }}</name>
    {% if value %}<value>{{ (value | indent) if value is string and (value.split('\n') | length) > 1 else value }}</value>{% else %}<value />{% endif %}
    {% if properties_descriptions[name] %}<description>{{ properties_descriptions[name] }}</description>{% else %}<description />{% endif %}
  </property>
{% endfor %}
</configuration>
