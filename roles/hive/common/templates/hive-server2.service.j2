[Unit]
Description=Hiveserver2

[Service]
User={{ hive_user }}
Group={{ hadoop_group }}
PIDFile={{ hive_pid_dir }}/hiveserver2.pid
ExecStart={{ hive_install_dir }}/bin/start-hiveserver2.sh
SuccessExitStatus=143
LimitNOFILE=64000
Restart={{ hiveserver2_restart }}

[Install]
WantedBy=multi-user.target
